.row
  .row
    .col-md-12
      %h4 My Addresses 
      .float-right
        =link_to 'Add new address', new_address_path, class: 'btn btn-success'
      .table-responsive
        %table#mytable.table.table-bordred.table-striped
          %thead
            %th Alias
            %th Address
            %th Actions
          %tbody
            -@addresses.each do |a|
              %tr
                %td
                  =a.alias
                %td
                  =a.address
                %td
                  =link_to 'Show', address_path(a)
                %td
                  =link_to 'Edit', edit_address_path(a)
                %td
                  =link_to 'Destroy', address_path(a),
                    method: :delete,
                    data: {confirm: 'Are you sure'}
        .clearfix
