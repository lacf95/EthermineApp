.container
  .col-xs-10.offset-xs-1.col-md-4.offset-md-4
    .card
      .card-header
        %h5 Submit your Address
      = form_with model: @address, url: { action: "create" }, class 'card-body' do |form|
        .form-group
          = form.label :address
          = form.text_field class: 'form-control', placeholder: 'put your address', type: 'text' 
      = from.submit 'Add Address', class: 'btn btn-primary', align: 'center'
